{
    "comment": "ln -s $POPPY/karabiner.json ~/.config/karabiner/assets/complex_modifications/",
    "title": "Rex's Karabiner Rules",
    "rules": [
        {
            "description": "Macbook Air Internal Keyboard Keybindings",
            "manipulators": [
                {
                    "description": "left_control + spacebar => hyper + spacebar",
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "spacebar",
                            "modifiers": [
                                "left_shift",
                                "left_control",
                                "left_option",
                                "left_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1452,
                                    "product_id": 657
                                }
                            ]
                        }
                    ]
                },
                {
                    "description": "left_control + n => hyper + n",
                    "type": "basic",
                    "from": {
                        "key_code": "n",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "n",
                            "modifiers": [
                                "left_shift",
                                "left_control",
                                "left_option",
                                "left_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1452,
                                    "product_id": 657
                                }
                            ]
                        }
                    ]
                },
                {
                    "description": "left_control + h => hyper + h",
                    "type": "basic",
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "h",
                            "modifiers": [
                                "left_shift",
                                "left_control",
                                "left_option",
                                "left_command"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1452,
                                    "product_id": 657
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Kinesis Freestyle2 Blue for Mac Keybindings",
            "manipulators": [
                {
                    "description": "caps_lock => backspace",
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 2652,
                                    "product_id": 34050
                                }
                            ]
                        }
                    ]
                },
                {
                    "description": "spacebar => left_control if alone",
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "spacebar"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 2652,
                                    "product_id": 34050
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Kinesis Freestyle2 Blue for Mac Shortcuts",
            "manipulators": [
                {
                    "description": "cut => left_option + x",
                    "type": "basic",
                    "parameters": {
                        "basic.simultaneous_threshold_milliseconds": 1
                    },
                    "from": {
                        "simultaneous": [
                            {
                                "key_code": "left_command"
                            },
                            {
                                "key_code": "x"
                            }
                        ],
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "x",
                            "modifiers": [
                                "left_option"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 2652,
                                    "product_id": 34050
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
