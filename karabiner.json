                            "identifiers": [
                                {
                                    "vendor_id": 1452,
                                    "product_id": 657
                                }
                            ]
                        }
                    ]
                },
                {
                    "description": "spacebar => left_control if not alone in emacs",
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
