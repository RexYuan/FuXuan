{
    "comment": "ln -s ~/Poppy/karabiner.json  /Users/Rex/.config/karabiner/assets/complex_modifications/",
    "title": "Rex's Karabiner Rules",
    "rules": [
        {
            "description": "caps_lock => escape if alone, otherwise left_control",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_control",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ]
                }
            ]
        },
        {
            "description": "fn => caps_lock if held, otherwise fn",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "fn",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "fn"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "caps_lock"
                        }
                    ]
                }
            ]
        },
        {
            "comment": "for spotlight",
            "description": "left_control + spacebar => left_control + left_option + spacebar",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "spacebar",
                            "modifiers": [
                                "left_control",
                                "left_option"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "comment": "for conversion between simplified and traditional chinese",
            "description": "left_control + S/T => left_control + left_option + left_command + S/T",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "s",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "s",
                            "modifiers": [
                                "left_control",
                                "left_option",
                                "left_command"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "t",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "t",
                            "modifiers": [
                                "left_control",
                                "left_option",
                                "left_command"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
