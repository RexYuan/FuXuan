{
    "comment": "ln -s $POPPY/karabiner.json ~/.config/karabiner/assets/complex_modifications/",
    "title": "Rex's Karabiner Rules",
    "rules": [
        {
            "description": "left_control sends hyper (left_shift + left_control + left_option + left_command)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_control",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_command",
                            "modifiers": [
                                "left_shift",
                                "left_control",
                                "left_option"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "caps_lock sends left_control and sets caps_control, fn sends caps_lock when pressed alone",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "caps_control",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "left_control"
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "caps_control",
                                "value": 0
                            }
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "fn",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "fn",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "caps_lock",
                            "hold_down_milliseconds": 100
                        }
                    ]
                }
            ]
        },
        {
            "description": "right_command sends right_control and sets cmd_control when in emacs",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "right_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "cmd_control",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "right_control"
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "cmd_control",
                                "value": 0
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^org\\.gnu\\.Emacs$"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "return_or_enter sends right_option and sets return_option when pressed as modifier",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "return_or_enter",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "return_option",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "right_option",
                            "lazy": true
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "return_option",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "return_or_enter"
                        }
                    ]
                }
            ]
        },
        {
            "description": "left_command sends left_option and sets cmd_option when in emacs",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "left_command",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "cmd_option",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "left_option"
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "cmd_option",
                                "value": 0
                            }
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^org\\.gnu\\.Emacs$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
