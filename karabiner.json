{
    "comment": "ln -s $POPPY/karabiner.json ~/.config/karabiner/assets/complex_modifications/",
    "title": "Rex's Karabiner Rules",
    "rules": [
        {
            "description": "caps_lock => escape if alone, otherwise left_control and phantom_control",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "set_variable": {
                                "name": "phantom_control",
                                "value": 1
                            }
                        },
                        {
                            "key_code": "left_control",
                            "lazy": true
                        }
                    ],
                    "to_after_key_up": [
                        {
                            "set_variable": {
                                "name": "phantom_control",
                                "value": 0
                            }
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "escape"
                        }
                    ]
                }
            ]
        },
        {
            "description": "fn => caps_lock if held, otherwise fn",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "fn",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "fn"
                        }
                    ],
                    "to_if_held_down": [
                        {
                            "key_code": "caps_lock"
                        }
                    ]
                }
            ]
        },
        {
            "comment": "for spotlight",
            "description": "left_control + spacebar => left_control + left_option + spacebar unless phantom_control",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "spacebar",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "spacebar",
                            "modifiers": [
                                "left_control",
                                "left_option"
                            ]
                        }
                    ],
                    "conditions": [
                        {
                            "type": "variable_if",
                            "name": "phantom_control",
                            "value": 0
                        }
                    ]
                }
            ]
        },
        {
            "comment": "for conversion between simplified and traditional chinese",
            "description": "left_control + S/T => left_control + left_option + left_command + S/T",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "s",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "s",
                            "modifiers": [
                                "left_control",
                                "left_option",
                                "left_command"
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "t",
                        "modifiers": {
                            "mandatory": [
                                "left_control"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "t",
                            "modifiers": [
                                "left_control",
                                "left_option",
                                "left_command"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "comment": "for panel switching in split view",
            "description": "left_command + caps_lock => left_control + left_option + left_command + Q",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "caps_lock",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ],
                            "optional": [
                                "caps_lock"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "q",
                            "modifiers": [
                                "left_control",
                                "left_option",
                                "left_command"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
